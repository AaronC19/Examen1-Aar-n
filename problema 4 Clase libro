from ClsAutor import autor1, autor2, autor3, autor4, autor5



_titulo = ""
_autor = ""
_editorial = ""
_fecha_publicacion = ""
_descripcion_contenido = ""


def __init__(self, titulo, autor, editorial, fecha_publicacion, descripcion_contenido):
    self.titulo = titulo
    self.autor = autor
    self.editorial = editorial
    self.fecha_publicacion = fecha_publicacion
    self.descripcion_contenido = descripcion_contenido



    def setTitulo(self, titulo):
        self._titulo = titulo

    def getTitulo(self):
        return self._titulo

    def setAutor(self, aut):
        self._autor = autor

    def getAutor(self):
        return self._autor

    def setEditorial(self,editorial):
        self._editorial = editorial

    def getEditorial(self):
        return self._editorial

    def setFecha_publicacion(self,FechPub):
        self.fecha_publicacion = FechPub

    def getFecha_publicacion(self):
        return self.fecha_publicacion

    def setDescripcion_contenido(self,DesCont ):
        self.descripcion_contenido = DesCont

    def getDescripcion_contenido(self):
        return self.descripcion_contenido

